{
  "name": "@defolym3/do3-sdk-core",
  "version": "0.1.1",
  "license": "MIT",
  "description": "⚒️ An SDK for building applications on top of Defolym3",
  "repository": {
    "type": "git",
    "url": "https://github.com/defolym3/do3-sdk-core.git"
  },
  "author": "thanhnhaweb3",
  "module": "dist/sdk.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublishOnly": "tsdx build"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.0.12",
    "@ethersproject/address": "^5.0.2",
    "@ethersproject/contracts": "^5",
    "@ethersproject/providers": "5",
    "@ethersproject/solidity": "^5.0.9",
    "big.js": "^5.2.2",
    "decimal.js-light": "^2.5.0",
    "ethers": "^5.4.7",
    "jsbi": "^3.1.4",
    "tiny-invariant": "^1.1.0",
    "toformat": "^2.0.0",
    "typechain": "^5.2.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/big.js": "^4.0.5",
    "husky": "^8.0.3",
    "size-limit": "^8.2.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ]
}
